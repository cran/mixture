Package: mixture
Type: Package
Title: Mixture Models for Clustering and Classification
Version: 2.1.2
Date: 2025-05-06
Authors@R: c(person("Nik", "Pocuca", role=c("aut"), comment = c(ORCID = "0000-0001-8365-0751")), 
            person("Ryan P.", "Browne", role = c("aut"), comment = c(ORCID = "0000-0003-4543-0218")),
